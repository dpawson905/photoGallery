<% include ../partials/header %>
  <main>
    <div class="section centered-v">
      <div class="container mt-5">
        <div class="row">
          <div class="col s12 m8 offset-m2">
            <div class="card green darken-1 z-depth-2">
              <div class="card-content white-text">
                <span class="card-title">Enter your email to change your password</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <form action="/users/forgot-pw" method="POST" class="col s12">
            <div class="row">
              <div class="input-field col m6 offset-m3 s12">
                <input id="email" type="email" name="email" class="validate">
                <label for="email">Email</label>
              </div>
            </div>
            <div class="row center">
              <button type="submit" class="btn waves-effect waves-light green z-depth-2">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
<% include ../partials/footer %>